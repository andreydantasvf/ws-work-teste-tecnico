{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src",
    "**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./generated",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/tests/**/*",
    "**/test/**/*",
    "**/__tests__/**/*",
    "./vitest.config.ts"
  ]
}